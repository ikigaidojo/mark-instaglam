
<p id="notice"><%= notice %></p>

<h1 align="center">members</h1>

<table align="center" style="color: tomato;">
  <thead>
    <tr>
      <th colspan="4">Profile</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.password %></td>
        <td><%= member.email %></td>
        <td><%= member.mobile_phone %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <tr>
        <td colspan="4"><%= image_tag attachment_url(member, :avatar, :fill, 300, 300, format: "jpg") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

